{
  "name": "omni-float-desktop",
  "private": true,
  "version": "1.0.0",
  "description": "A modular floating desktop assistant with plugin system",
  "main": "out/main/index.js",
  "homepage": "https://example.com",
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "clean": "rimraf dist out",
    "prebuild:win": "npm run clean && npm run build",
    "build:win": "electron-builder --win",
    "prebuild:mac": "npm run clean && npm run build",
    "build:mac": "electron-builder --mac",
    "prebuild:linux": "npm run clean && npm run build",
    "build:linux": "electron-builder --linux"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.3.4"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@types/node": "^20.16.10",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "electron": "^32.1.2",
    "electron-builder": "^25.0.5",
    "electron-vite": "^2.3.0",
    "postcss": "^8.4.47",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.12",
    "typescript": "^5.6.2",
    "vite": "^5.4.7",
    "zustand": "^4.5.5"
  },
  "engines": {
    "node": "^18.18.0 || >=20.0.0"
  },
  "build": {
    "appId": "com.example.omni-float-desktop",
    "productName": "Omni Float Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out",
      "dist"
    ],
    "mac": {
      "icon": "build/icon.icns",
      "target": "dmg"
    },
    "win": {
      "icon": "build/icon.ico",
      "target": "nsis"
    },
    "linux": {
      "icon": "build/icon.png",
      "target": "AppImage"
    }
  }
}
